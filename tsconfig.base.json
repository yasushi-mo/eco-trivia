{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@eco-trivia/shared/*": ["packages/shared/src/*"]
    },

    "outDir": "dist",
    "declaration": true,
    "declarationMap": true
  }
}
